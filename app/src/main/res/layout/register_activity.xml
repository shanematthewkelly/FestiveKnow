<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="20dp"
    android:paddingBottom="8dp">





    <androidx.cardview.widget.CardView

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <ImageView
                    android:padding="10dp"
                    android:tint="@color/white"
                    android:src="@drawable/img_register"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:layout_height="50dp"
                    android:layout_width="50dp" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="REGISTER AT FESTIVEKNOW"
                    android:textColor="#fff"
                    android:fontFamily="sans-serif-medium"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_height="20dp"
                android:layout_below="@+id/linearLayout"
                android:layout_width="20dp"
                android:rotation="45"
                android:layout_marginTop="-10dp"
                android:layout_centerHorizontal="true"
                android:tint="@color/colorPrimaryDark"
                android:src="@drawable/square" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/imageView1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/imageView_User"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_person_outline_black_24dp"/>

                <EditText
                    android:id="@+id/regName"
                    android:inputType="textPersonName"
                    android:layout_height="40dp"
                    android:hint="Name"
                    android:textColor="@color/darkgrey"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:textColorHint="@color/darkgrey"
                    android:layout_width="match_parent"
                    android:background="@color/lightgrey"
                    android:layout_toRightOf="@id/imageView_User"
                    android:layout_alignBottom="@id/imageView_User"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/imageView_Email"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/img_mail"/>

                <EditText
                    android:id="@+id/regEmail"
                    android:layout_height="40dp"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:textColorHint="@color/darkgrey"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/darkgrey"
                    android:layout_width="match_parent"
                    android:background="@color/lightgrey"
                    android:layout_toRightOf="@id/imageView_Email"
                    android:layout_alignBottom="@id/imageView_Email"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/relativeLayout4"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/imageView_Password"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_lock_outline_black_24dp"/>

                <EditText
                    android:id="@+id/regPassword"
                    android:layout_height="40dp"
                    android:hint="Password"
                    android:textColorHint="@color/darkgrey"
                    android:maxLines="1"
                    android:textColor="@color/darkgrey"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:background="@color/lightgrey"
                    android:layout_toRightOf="@id/imageView_Password"
                    android:layout_alignBottom="@id/imageView_Password"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/imageView_PasswordRetype"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="8dp"
                    android:tint="@color/white"
                    android:src="@drawable/ic_lock_outline_black_24dp"/>

                <EditText
                    android:id="@+id/regPasswordConfirm"
                    android:layout_height="40dp"
                    android:hint="Confirm Password"
                    android:textColorHint="@color/darkgrey"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:inputType="textPassword"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:background="@color/lightgrey"
                    android:textColor="@color/darkgrey"
                    android:layout_toRightOf="@id/imageView_PasswordRetype"
                    android:layout_alignBottom="@id/imageView_PasswordRetype"
                    android:layout_alignParentTop="true"/>

            </RelativeLayout>

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="sans-serif"
                android:layout_below="@id/relativeLayout3"
                android:text="I agree to the Terms of Service"
                />

            <Button
                android:id="@+id/registerButton"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button_style"
                android:text="Register"
                android:layout_below="@id/checkbox"
                android:textColor="#fff"
                android:drawableRight="@drawable/ic_send_black_24dp"/>

            <TextView
                android:id="@+id/alreadyRegistered"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/registerButton"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="I already have an account!"
                android:gravity="center"
                android:fontFamily="sans-serif"
                >

            </TextView>




        </RelativeLayout>




    </androidx.cardview.widget.CardView>






</ScrollView>