<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_list_item_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />



        <TextView
            android:id="@+id/lbl_message"
            style="@style/Text.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_list_item_circle"
            android:layout_marginTop="14dp"
            android:padding="8dp"
           />

        <TextView
            android:id="@+id/lbl_date_and_time"
            style="@style/Text.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_message"
            android:padding="8dp"
            android:text="@string/sports_info_placeholder"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="25dp"/>

        <ImageView
            android:id="@+id/imv_date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/lbl_date_and_time"
            app:srcCompat="@drawable/ic_event_black_24dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>




        <ProgressBar
            android:id="@+id/pro_item_data"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

